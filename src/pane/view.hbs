<!DOCTYPE html>
<html lang="en">

<head>
  <base href="{{base}}">
  <meta http-equiv="Content-type"
    content="text/html;charset=UTF-8">
  <meta http-equiv="Content-Security-Policy"
    content="default-src 'none'; img-src *; style-src 'self'; script-src 'nonce-{{nonce}}';">
  <link rel="stylesheet"
    href="file://{{style}}" />
</head>

<body>

  <h3>Dependencies</h3>
  <table class="dependencies">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    {{#each dependencies}}
    <tr class="dependency">
      <td class="type {{this.type}}">{{this.type}}</td>
      <td>{{this.name}}</td>
      <td class="version">
        <span class="tag">{{this.version}}</span>
      </td>
      <td class="version">
        <span class="tag latest">{{this.version}}</span>
      </td>
    </tr>
    {{/each}}
  </table>

  <script async
    src="file://{{script}}"
    nonce="{{nonce}}"></script>

</body>

</html>
